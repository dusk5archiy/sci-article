@model SciArticle.Models.Front.User.ArticleEditViewModel

@{
    ViewData["Title"] = "Tạo bài báo mới";
}

<div class="container my-4">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Title" class="form-label">Tiêu đề</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Topic" class="form-label">Chủ đề/Danh mục</label>
            <input asp-for="Topic" class="form-control" placeholder="Nhập chủ đề hoặc danh mục" />
            <span asp-validation-for="Topic" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Abstract" class="form-label">Tóm tắt</label>
            <textarea asp-for="Abstract" class="form-control" rows="3" placeholder="Tóm tắt ngắn gọn về bài báo của bạn"></textarea>
            <span asp-validation-for="Abstract" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Content" class="form-label">Nội dung</label>
            <textarea asp-for="Content" class="form-control" rows="15" placeholder="Nội dung đầy đủ của bài báo của bạn"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Dashboard" class="btn btn-outline-secondary">Hủy bỏ</a>
            <button type="submit" class="btn btn-primary">Gửi bài báo</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}